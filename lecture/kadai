#include<stdio.h>
#include<stdlib.h>
#include<time.h>
#define N 10000
int main(){
int i,j,n,a[3][n],sum[3];
printf("生徒数は%d人");
scanf("%d",&n);
for(i=0,i<n,i++){
	for(j=0,j<3,j++){
		a[j][i]=(rand()%21)%5;
		printf("%d点",a[j][i]);
		\n;
}}	
for(i=0,i<n,i++){
	for(j=0,j<3,j++){
sum[i]=sum[i]+a[j][i];
printf("%d点",sum[i]);
\n;
}	
}
return0
}

